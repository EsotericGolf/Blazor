<div class="alert alert-secondary mt-4" role="alert">
  <span class="oi oi-bug mr-2" aria-hidden="true"></span>
  <strong>@Title</strong>

  <span class="text-nowrap">
    Feel free to
    <span class="font-weight-bold">create a new issue</span>
  </span>
  on <a target="_blank" class="font-weight-bold" href="https://github.com/EsotericGolf/Blazor">the GitHub</a><span class="font-weight-bold">.</span>
</div>

@code {
  // Demonstrates how a parent component can supply parameters
  [Parameter]
  public string Title { get; set; }
}
